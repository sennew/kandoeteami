<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/light_grey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_grey"
        android:paddingRight="10dp"
        android:paddingLeft="12dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/orga_user_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"


            android:src="@drawable/profilepic_placeholder"
            app:civ_border_color="@color/dark_grey"
            app:civ_border_width="2dp" />


        <TextView
            android:id="@+id/textMemberOrganisator"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginLeft="100dp"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="45dp"
            android:paddingLeft="4dp"
            android:textColor="@color/grey"
            android:text="@string/ex_list_organisator"
             />


        <TextView
            android:id="@+id/textVoornaam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="80dp"
            android:paddingLeft="4dp"
            android:paddingRight="3dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:textColor="@color/dark_grey"


            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textAchternaam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="1dp"
            android:textSize="18sp"
            android:textColor="@color/dark_grey"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_toRightOf="@+id/textVoornaam"
             />



    </RelativeLayout>


</RelativeLayout>