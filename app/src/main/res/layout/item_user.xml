<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:minHeight="50dp"
    android:background="@drawable/border_set"
    android:padding="8dp">

    <ImageView
        android:id="@+id/item_user_profilepic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/profilepic_placeholder"
        android:contentDescription="@string/profile_picture_content_img" />

    <ImageView
        android:id="@+id/item_user_organiser_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_organiser"
        />
    <TextView
        android:id="@+id/item_user_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_user_profilepic"
        tools:text="ArneLauryssens"

        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="arne.lauryssens@student.kdg.be"
        android:layout_below="@id/item_user_username"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/item_user_profilepic" />


</RelativeLayout>