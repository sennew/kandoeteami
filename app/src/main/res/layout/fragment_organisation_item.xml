<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/org_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholderdark"/>

        <TextView
            android:id="@+id/org_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/org_img"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            tools:text="Karel de Grote Hogeschool"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/colorAccent"/>


        <LinearLayout
            android:layout_below="@+id/org_title"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/org_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="Description"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>